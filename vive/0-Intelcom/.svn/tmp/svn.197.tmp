<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:p="http://primefaces.org/ui"
                xmlns:fn="http://java.sun.com/jsp/jstl/functions"
                template="/WEB-INF/facelets/templates/page-template_m.xhtml"
                xmlns:pm="http://primefaces.org/mobile">

    <ui:define name="content">
        <h:form id="client-onsultar-doc-form" enctype="multipart/form-data">
            <p><h1 align="center">Cargar Documentos</h1></p> 
            <p:separator style="width:90%" styleClass="separadores"/>   
            <h:panelGrid columns="2" id="grid_nit"  cellpadding="5" width="90%" >
                
                <p:outputLabel id="ol_nombre_cliente" value="Nombre Cliente" styleClass="labelForm" />
                <p:outputLabel id="it_nombre" value="#{clientesActualizarFacesBean.detalleCliente.nombre}"  />
                
                <h:panelGroup style="width: 100%" >
                    <p:outputLabel id="req_ol_tipoc" value="(*)" styleClass="requerido" />
                    <p:outputLabel id="ol_tipoc" value="Tipo" styleClass="labelForm" />
                </h:panelGroup>
                <h:panelGroup style="width: 100%" id="tipoc">
                    <p:selectOneMenu value="#{clientesActualizarFacesBean.consultarDocumentoClienteTipo}" required="true" requiredMessage="Campo tipo es requerido">
                        <f:selectItem itemLabel="Seleccione" itemValue="" />
                        <f:selectItems value ="#{clientesActualizarFacesBean.listaClaveValorTipoDTOCrear}"
                                       var="typTipo" itemLabel="#{typTipo.valor}" itemValue="#{typTipo.clave}" />
                    </p:selectOneMenu>                    
                </h:panelGroup>

                <h:panelGroup style="width: 100%" >
                    <p:outputLabel id="req_ol_titulodoc" value="(*)" styleClass="requerido" />
                    <p:outputLabel id="ol_titulodoc" value="Año" styleClass="labelForm" />
                </h:panelGroup>
                <h:panelGroup style="width: 100%" id="titulodoc">
                    <p:selectOneMenu value="#{clientesActualizarFacesBean.consultarDocumentoClienteTitulo}" required="true" requiredMessage="Campo año es requerido">
                        <f:selectItem itemLabel="Seleccione" itemValue="" />
                        <f:selectItems value ="#{clientesActualizarFacesBean.listaClaveValorTituloDTO}"
                                       var="typTipo" itemLabel="#{typTipo.valor}" itemValue="#{typTipo.clave}" />
                    </p:selectOneMenu>                    
                </h:panelGroup>
                
                <h:panelGroup style="width: 100%" >
                    <p:outputLabel id="req_ol_nombre_doc" value="(*)" styleClass="requerido" />
                    <p:outputLabel id="ol_nombre_doc" value="Nombre del documento" styleClass="labelForm" />
                </h:panelGroup>
                <p:inputText id="it_nombre_doc" value="#{clientesActualizarFacesBean.consultarDocumentoClienteNombre}" required="true" requiredMessage="Nombre del documnento es requerido" />
                
                
                <h:panelGroup style="width: 100%" id="fileAdjLbl">
                    <p:outputLabel value="(*)" styleClass="requerido" />
                    <p:outputLabel value="Documento" styleClass="labelForm"/>
                </h:panelGroup>
                <h:panelGroup style="width: 100%" id="fileAdj">
                    <p:fileUpload value="#{clientesActualizarFacesBean.fileDocumentoCotizacionAutomatica}" mode="simple" />
                </h:panelGroup>
                
                <p:outputLabel value="Observaciones" styleClass="labelForm"/>
                <p:inputTextarea id="btn_observacion" value="#{clientesActualizarFacesBean.consultarDocumentoClienteDescripcion}"  />      
                
            </h:panelGrid>
            
            <p:messages id="messagesPage" showDetail="true" autoUpdate="true" styleClass="messagesForm" />  

            <h:panelGrid  columns="2" id="btn_Grid" cellpadding="5" styleClass="panelBotones" >
                <p:commandButton value="Regresar" action="#{menuFacesBean.redirect}" immediate="true" styleClass="backGIntelcom">
                    <f:param name="#{navigationFaces.redirectParamName}" value="outcome:clientes-documentacion" />
                </p:commandButton>
                <p:commandButton value="Guardar" update="@form" ajax="false" action="#{clientesActualizarFacesBean.enviarDocumentoClienteAction}"  styleClass="backGIntelcom" />
            </h:panelGrid>

        </h:form>
    </ui:define>
</ui:composition>  